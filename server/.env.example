# GOHIP Platform - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
PROJECT_NAME=GOHIP
VERSION=0.1.0
DEBUG=False

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gohip_db

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# External API Keys (for data sourcing)
EXTERNAL_API_KEY=

# Unsplash API Key (for dynamic country images)
# Get free API key at: https://unsplash.com/developers
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=
